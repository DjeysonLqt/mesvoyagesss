{% extends "basefront.html.twig" %}
{% block body %}
    <table class="table table-striped">
        <tread>
            <tr>
                <th class="text-left align-top" scope="col">
                    Ville
                    <a href="{{ path('voyages.sort', {champ:'ville', ordre:'ASC'}) }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true"><</a>
                    <a href="{{ path('voyages.sort', {champ:'ville', ordre:'DESC'}) }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">></a>
                    <form class="form-inline mt-1" methtod="POST" action="{{ path('voyages.findallequal', {champ:'ville'}) }}">
                        <div class="form-group mr-1 mb-2">
                            <input type="text" class="sm" name="recherche">
                        </div>
                        <button type="submit" class="btn btn-primary mb-2 btn-sm">Filtrer</button>
                    </form>
                </th>
                <th class="text-left align-top" scope="col">Pays</th>
                <th class="text-left align-top" scope="col">Note</th>
                <th class="text-left align-top" scope="col">Date</th>
            </tr>
        </tread>
        <tbody>
    {% for visite in visites %}
        <tr>
            <td>
                <h5 class="text-primary">
                    <a href="#">{{ visite.ville }}</a>
                </h5>
            </td>
            <td>
                {{ visite.pays }}
            </td>
            <td>
                <strong>
                    {%  if visite.note <10 %}
                        <div class="text-danger">
                            {{ visite.note }}/20
                        </div>
                    {% else %}
                        <div class="text-success">
                            {{ visite.note }}/20
                        </div>
                    {% endif %}
                </strong>
            </td>
            <td>
                {{ visite.datecreation }}
            </td>
        </tr>
    {% endfor %}
        </tbody>
    </table>
{% endblock %}

